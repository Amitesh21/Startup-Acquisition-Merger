<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="">


    <!-- Bootstrap Core CSS -->
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="css/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/highcharts/highcharts.js"></script>
    <script src="/bower_components/highcharts/highcharts-3d.js"></script>
    <script src="/bower_components/highcharts/highcharts-more.js"></script>
    <script src="/bower_components/highcharts/modules/solid-gauge.js"></script>
    <script src="/bower_components/highcharts/modules/exporting.js"></script>

    <!--<link rel="shortcut icon" href="assets/images/gt_favicon.png">-->
    <style type="text/css">

        .scrollit {
            overflow: scroll;
            height: 350px;
        }
    </style>

    <script type="text/javascript">

        $(function () {

            var chart3 = new Highcharts.Chart({
                chart: {
                    renderTo:'container2',
                    backgroundColor: '#EDEEFA',
                    type: 'pie',
                    options3d: {
                        enabled: true,
                        alpha: 45
                    }
                },
                title: {
                    text: 'Tweets Polarity'
                },
                subtitle: {
                    text: "[ <%= compFirst.toUpperCase() %>" + " + " + "<%= compSecond.toUpperCase() %> ]"
                },
                plotOptions: {
                    pie: {
                        innerSize: 100,
                        depth: 45
                    }
                },
                series: [{
                    name: 'Tweets Polarity',
                    data: [
                        ['Neutral', <%= polarity[2] %>],
                        ['Negative', <%= polarity[1] %>],
                        ['Positive', <%= polarity[0] %>]


                    ]
                }]
            });
            chart3.render();

        });

    </script>

</head>

<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/index">Venture Net</a>
        </div>
        <!-- /.navbar-header -->


        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="/getStats"><i class="fa fa-dashboard fa-fw"></i>Analysis</a>
                    </li>
                    <li>
                        <a href="/stock"><i class="fa fa-dashboard fa-fw"></i> Stock Analysis</a>
                    </li>
                    <li>
                        <a href="/strategy"><i class="fa fa-dashboard fa-fw"></i> Strategy Analysis</a>
                    </li>
                    <li>
                        <a href="/sentiment"><i class="fa fa-dashboard fa-fw"></i> Sentiment Analysis</a>
                    </li>
                    <li>
                        <a href="/company1"><i class="fa fa-dashboard fa-fw"></i> <%= compFirst.toUpperCase() %> Data</a>
                    </li>
                    <li>
                        <a href="/company2"><i class="fa fa-dashboard fa-fw"></i> <%= compSecond.toUpperCase() %> Data</a>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sentiment Overview</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Tweets Panel
                    </div>
                    <div id="tweetBox" class="pull-right borderShadow">
                        <div class="scrollit">
                            <table border="1">
                                            <% for(var i = 0;i < tweets.length; i++) { %>
                                            <tr>
                                                <td style="padding-left: 10px;"><p>

                                                    <div class="row" style="background: #FAFAFA">
                                                        <div class="col-xs-2">
                                                            <img src="images/tweet.png" width="40px" height="40px">
                                                        </div>
                                                        <div class="col-xs-9">
                                                            <font face="Comic Sans MS">
                                                                <%= tweets[i] %>
                                                                </font>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Sentiment Data
                    </div>
                    <div class="panel-body">
                        <div id="container2"></div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<!-- jQuery -->
<script src="/bower_components/jquery/dist/jquery.min.js"></script>

